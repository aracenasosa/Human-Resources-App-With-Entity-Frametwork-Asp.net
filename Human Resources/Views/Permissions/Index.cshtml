@model IEnumerable<Human_Resources.Permission>

@{
    ViewBag.Title = "Index";
}
<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body style="background: #F2994A;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #F2C94C, #F2994A);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #F2C94C, #F2994A); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
">

    <div class="container mt-5">
        <h2 class="display-4">Permissions</h2>
        <p>
            <a href="/Permissions/Create" class="btn btn-primary btn-lg p-3">Create New</a>

        </p>
        @foreach (var item in Model)
        {

            <div class="row my-4">
                <div class="col-12">
                    <div class="card">

                        <div class="card-header bg-primary">
                            <h2 class="display-4"><span class="badge badge-danger">Employee</span> <span>@Html.DisplayFor(modelItem => item.Employee1.Name)</span></h2>
                        </div>

                        <div class="card-body">

                            <strong class="h2">@Html.DisplayNameFor(model => model.Desde):</strong> <span class="h2">@Html.DisplayFor(modelItem => item.Desde)</span><br /><br />
                            <strong class="h2">@Html.DisplayNameFor(model => model.Hasta):</strong> <span class="h2">@Html.DisplayFor(modelItem => item.Hasta)</span><br /><br />
                            <strong class="h2">@Html.DisplayNameFor(model => model.Comentarios):</strong> <span class="h2">@Html.DisplayFor(modelItem => item.Comentarios)</span>

                        </div>

                        <div class="card-footer">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-lg p-3" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-lg p-3" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-lg p-3" })
                        </div>
                    </div>

                </div>
            </div>

        }
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>

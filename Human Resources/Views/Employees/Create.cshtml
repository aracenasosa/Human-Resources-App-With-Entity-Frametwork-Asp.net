@model Human_Resources.Employee
@{
    ViewBag.Title = "Create";
}
<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->

</head>
<body style="background: #4B79A1;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #283E51, #4B79A1);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #283E51, #4B79A1); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container" style="margin-left:140px;">
            <h2 class="display-4 text-warning">Create</h2>
            <div class="row">
                <div class="col-9">
                    <hr />
                    <div class="card">
                        <div class="card-header">
                            <h1 class="display-4"><span class="badge badge-danger">Form Employees</span></h1>
                            <p class="h2">The correct way to enter the date: yyyy/mm/dd</p>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="card-body">
                            <form>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Code, "Code", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Code", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Name", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Lastname, "Lastname", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Lastname", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Telephone, "Telephone", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Telephone", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Admission, "Admission", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Admission, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Admission", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Admission, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Salary, "Salary", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Salary", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Status, "Status", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control col-10 p-4", @placeholder = "Enter Status", @style = "font-size:14px" } })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Departament, "Departament", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.DropDownList("Departament", null, htmlAttributes: new { @class = "form-control col-md-2 px-2 pt-2 mb-3", @style = "font-size:12px" })
                                    @Html.ValidationMessageFor(model => model.Departament, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.Position, "Position", htmlAttributes: new { @class = "control-label col-md-2 mt-2", @style = "font-size:12px" })
                                    @Html.DropDownList("Position", null, htmlAttributes: new { @class = "form-control col-md-2 p-2 mb-3", @style = "font-size:12px" })
                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                </div>
                                <button class="btn btn-primary btn-block p-3" type="submit">
                                    <span style="font-size:14px; ">Create</span>
                                </button>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <a class="btn btn-warning btn-lg p-3 mt-3" href="/Employees/Index">Back To List</a>
        </div>

    }

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>



